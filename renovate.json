{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],

  "tekton": {
    "fileMatch": ["./*.yaml"]
  },

  "postUpgradeTasks": {
    "commands": [
      "echo >>README.md",
      "git diff >>README.md",
      "echo >>README.md",
      "echo >>README.md",
      "echo -n \"init image:\" >>README.md",
      "yq '.spec.tasks[] | select(.name == \"init\") | .taskRef.params[] | select(.name == \"bundle\") | .value' pipelinerun.yaml >>README.md",
      "echo >>README.md",
      "echo >>README.md",
      "migration-tool.sh pipelinerun.yaml >>README.md"
    ]
  }
}
