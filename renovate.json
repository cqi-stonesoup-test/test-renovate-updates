{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],

  "tekton": {
    "fileMatch": ["./*.yaml"]
  },

  "packageRules": [
    {
      "matchPackageNames": ["registry.fedoraproject.org/fedora-minimal"],
      "enabled": false
    }
  ],

  "postUpgradeTasks": {
    "commands": [
      "echo >>README.md",
      "migration-tool.sh pipelinerun.yaml >>README.md"
    ]
  }
}
