{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],

  "tekton": {
    "fileMatch": ["./*.yaml"]
  },

  "packageRules": [
    {
      "matchPackageNames": ["registry.fedoraproject.org/fedora-minimal"],
      "enabled": false
    }
  ],

  "regexManagers": [
    {
      "fileMatch": ["^Containerfile.*$"],
      "matchStrings": [
        "ARG yq_version=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "mikefarah/yq",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ],

  "postUpgradeTasks": {
    "commands": [
      "echo >>README.md",
      "migration-tool.sh pipelinerun.yaml {{depName}}{{#if newValue}}:{{newValue}}{{/if}}{{#if newDigest}}@{{newDigest}}{{/if}} >>README.md"
    ]
  }
}
