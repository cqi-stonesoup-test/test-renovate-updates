{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],

  "tekton": {
    "fileMatch": ["./*.yaml"],
    "postUpgradeTasks": {
      "commands": [
        "migration-tool.py -f {{depName}}{{#if currentValue}}:{{currentValue}}{{/if}}{{#if currentDigest}}@{{currentDigest}}{{/if}} -t {{depName}}{{#if newValue}}:{{newValue}}{{/if}}{{#if newDigest}}@{{newDigest}}{{/if}} -l ./README.md"
      ]
    }
  },

  "packageRules": [
    {
      "matchPackageNames": ["registry.fedoraproject.org/fedora-minimal"],
      "enabled": false
    },
    {
      "matchPackageNames": [
        "quay.io/mytestworkload/test-renovate-updates-utils",
        "quay.io/konflux-ci/tekton-catalog/task-summary"
      ],
      "groupName": "cool-updates"
    }
  ],

  "regexManagers": [
    {
      "fileMatch": ["^Containerfile.*$"],
      "matchStrings": [
        "ARG yq_version=[\"']?(?<currentValue>.+?)[\"']?\\s+"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "mikefarah/yq",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ]

}
